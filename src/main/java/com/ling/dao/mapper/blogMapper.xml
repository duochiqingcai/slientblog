        <result property="description" column="blog_description"/>
    </resultMap>-->

    <!--1.根据用户邮箱，查询用户博客信息-->
    <select id="getBlogByEmail" resultType="com.ling.pojo.Blog">
        select blog_id,blog_content,blog_picture,blog_time
        from blog where user_email=#{user_email}
        order by blog_time limit #{m},10;
    </select>

    <!--2.更新用户博客内容-->
    <insert id="updateBlog" parameterType="String">
        insert into blog(blog_content,blog_picture,blog_time) values(#{blog_content},#{blog_picture},#{blog_time}) ;
    </insert>
</mapper>