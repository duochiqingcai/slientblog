<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ling.dao.UserDao">
    <!--1.登录查询，根据用户名查询用户信息-->
    <select id="getUserByEmail" parameterType="String" resultType="com.ling.pojo.User">
        select user_name,user_email,user_pwd from user where user_email=#{email};
    </select>
    <!--2.注册，根据输入，想用户表中插入用户名和密码、邮箱信息-->
    <insert id="insertUser" parameterType="String">
        insert into user(user_name,user_pwd,user_email) values(#{username},#{password},#{email}) ;
    </insert>
</mapper>